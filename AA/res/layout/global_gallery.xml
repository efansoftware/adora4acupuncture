<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    android:orientation="vertical" 
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <Gallery xmlns:android="http://schemas.android.com/apk/res/android" 
        android:id="@+id/global_gallery"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:spacing="10px"
    />

	<TextView
	    android:id="@+id/global_image_tip"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:gravity="center_horizontal"
	/>

    <ImageView 
        android:id="@+id/global_image0"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:scaleType="fitCenter"
    />

    <HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:scrollbarTrackHorizontal="@drawable/scrollbar_vertical_track"
        android:scrollbarThumbHorizontal="@drawable/scrollbar_vertical_thumb"
        android:scrollbarSize="6dip" 
        android:scrollbars="none"
    >
	    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:scrollbarTrackVertical="@drawable/scrollbar_vertical_track"
	        android:scrollbarThumbVertical="@drawable/scrollbar_vertical_thumb"
	        android:scrollbarSize="12dip" 
            android:scrollbars="none"
	    >
		    <ImageView 
		        android:id="@+id/global_image"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content" 
		        android:scaleType="matrix"
		    />
	   </ScrollView>
    </HorizontalScrollView>

    <!--  Not good at bottom, vary and scrutching depends on the real image size!
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" 
        android:gravity="bottom" >
		<Gallery xmlns:android="http://schemas.android.com/apk/res/android" 
		    android:id="@+id/global_gallery"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		/>
	</RelativeLayout>
	-->

</LinearLayout>
